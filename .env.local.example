# Environment
NODE_ENV=development

# Public URLs (exposed to browser)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Google OAuth (Public - exposed to browser)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id

# Facebook OAuth (Public - exposed to browser)
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# Facebook OAuth (Server-side only - NOT exposed to browser)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# JWT Secret (Server-side only)
JWT_SECRET=your_jwt_secret

# Development/Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Build Analysis (optional)
ANALYZE=false
